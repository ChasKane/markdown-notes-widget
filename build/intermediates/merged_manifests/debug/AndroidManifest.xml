<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.tapi.handynotes"
    android:versionCode="7"
    android:versionName="1.6" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="33" />

    <supports-screens android:xlargeScreens="true" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <receiver
            android:name="net.tapi.handynotes.HandyNotes22"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_22" />
        </receiver>

        <activity
            android:name="net.tapi.handynotes.NewNote"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.tapi.handynotes.EditNote"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name="net.tapi.handynotes.WidgetOptionsActivity"
            android:exported="false"
            android:label="Widget Options" />

        <service
            android:name="net.tapi.handynotes.NoteViewsService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name="net.tapi.handynotes.HandyNotes"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>